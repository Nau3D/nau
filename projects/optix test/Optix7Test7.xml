<?xml version="1.0" ?>
<project name="Optix Test" width=2048 height=1024>
	<assets>
		<scenes>
			<scene name="MainScene" >
				<!--file name="../../models/sponza/crytek-sponza/sponza.nbo" /-->
				<!--file name="../../models/LargoCamoes/largoCamoes.nbo" /-->
				<!--file name="../../models/SanMiguel/san-miguel.nbo" /-->
                <file name="../../models/cornellBox/CornellBox-Sphere2.obj" />
			</scene>
		</scenes>
		<viewports>
			<viewport name="RightViewport" >
				<ORIGIN x="0.5" y="0" />
				<SIZE width="0.5" height="1.0" />
				<CLEAR_COLOR r="0.5" g="0.0" b="0.0" />
			</viewport>
			<viewport name="LeftViewport" fixed="true">
				<ORIGIN x="0.0" y="0" />
				<SIZE width="0.5" height="1.0" />
				<CLEAR_COLOR r="0.0" g="0.5" b="0.0" />
			</viewport>
		</viewports>
		<cameras>
			<camera name="MainCamera" >
				<viewport name="LeftViewport" />
				<projection TYPE="PERSPECTIVE" FOV=60.0 NEAR=1.0 FAR=10000.0 />
				<POSITION x="0.0" y="0.75" z="2.5" />
				<VIEW x="0.0" y="0.0" z="-1.0"  />
				<UP x="0.0" y="1.0" z="0.0" />
			</camera>
		</cameras>
		<lights>
			<light name="Sun" >
   				<POSITION x="0.0" y="1.57" z="0.0" />

				<!--POSITION x="-0.24" y="1.57" z="-0.22" /-->
			</light>
		</lights>
		<materialLibs>   
			<materialLib filename="optixTest.mlib"/>
		</materialLibs>
	</assets>
	<pipelines>
		<pipeline name="fixedfunction" default="true">
			<pass class="rt" name="pass1">
				<scenes>
					<scene name="MainScene" />
				</scenes>
				<camera name="MainCamera" />
				<renderTarget name="test" fromLibrary="Optix Ray Tracer Render Target" />
				<lights>
					<light name="Sun" />
				</lights>
                <viewport name="RightViewport" />

				<rtRayTypes>
					<rayType name="Phong"/>
					<rayType name="Shadow"/>
				</rtRayTypes>

				<rtVertexAttributes>
					<attribute name="position"/>
					<attribute name="normal"/>
					<attribute name="texCoord0"/>
				</rtVertexAttributes>

				<rtEntryPoint>
					<rayGen file="optix/testOptix7.ptx" proc="__raygen__renderFrame"/> 
				</rtEntryPoint>
				<rtDefaultMaterial>
					<rayType name="Phong">
						<rtProgram type="ANY_HIT" file="optix/testOptix7.ptx" proc="__anyhit__radiance"/> 
						<rtProgram type="CLOSEST_HIT" file="optix/testOptix7.ptx" proc="__closesthit__radiance"/> 
						<rtProgram type="MISS" 		 file="optix/testOptix7.ptx" proc="__miss__radiance"/> 
					</rayType>
					<rayType name="Shadow">
						<rtProgram type="ANY_HIT" file="optix/testOptix7.ptx" proc="__anyhit__shadow"/> 
						<rtProgram type="CLOSEST_HIT" file="optix/testOptix7.ptx" proc="__closesthit__shadow"/> 
						<rtProgram type="MISS" 		 file="optix/testOptix7.ptx" proc="__miss__shadow"/> 
					</rayType>
				</rtDefaultMaterial>
                <rtMaterialMap>
                    <rtMap to = "light">
                        <rayType name="Phong">
                            <rtProgram type="ANY_HIT" file="optix/testOptix7.ptx" proc="__anyhit__light"/> 
                            <rtProgram type="CLOSEST_HIT" file="optix/testOptix7.ptx" proc="__closesthit__light"/> 
                            <rtProgram type="MISS" 		 file="optix/testOptix7.ptx" proc="__miss__light"/> 
                        </rayType>
                        <rayType name="Shadow">
                            <rtProgram type="ANY_HIT" file="optix/testOptix7.ptx" proc="__anyhit__light_shadow"/> 
                            <rtProgram type="CLOSEST_HIT" file="optix/testOptix7.ptx" proc="__closesthit__light_shadow"/> 
                            <rtProgram type="MISS" 		 file="optix/testOptix7.ptx" proc="__miss__light_shadow"/> 
                        </rayType>
                    </rtMap>
                    <rtMap to = "rightSphere">
                        <rayType name="Phong">
                            <rtProgram type="ANY_HIT" file="optix/testOptix7.ptx" proc="__anyhit__phong_glass"/> 
                            <rtProgram type="CLOSEST_HIT" file="optix/testOptix7.ptx" proc="__closesthit__phong_glass"/> 
                            <rtProgram type="MISS" 		 file="optix/testOptix7.ptx" proc="__miss__phong_glass"/> 
                        </rayType>
                        <rayType name="Shadow">
                            <rtProgram type="ANY_HIT" file="optix/testOptix7.ptx" proc="__anyhit__shadow_glass"/> 
                            <rtProgram type="CLOSEST_HIT" file="optix/testOptix7.ptx" proc="__closesthit__shadow_glass"/> 
                            <rtProgram type="MISS" 		 file="optix/testOptix7.ptx" proc="__miss__shadow_glass"/> 
                        </rayType>
                    </rtMap>
                    <rtMap to = "leftSphere">
                        <rayType name="Phong">
                            <rtProgram type="ANY_HIT" file="optix/testOptix7.ptx" proc="__anyhit__radiance"/> 
                            <rtProgram type="CLOSEST_HIT" file="optix/testOptix7.ptx" proc="__closesthit__phong_metal"/> 
                            <rtProgram type="MISS" 		 file="optix/testOptix7.ptx" proc="__miss__radiance"/> 
                        </rayType>
                        <rayType name="Shadow">
                            <rtProgram type="ANY_HIT" file="optix/testOptix7.ptx" proc="__anyhit__shadow"/> 
                            <rtProgram type="CLOSEST_HIT" file="optix/testOptix7.ptx" proc="__closesthit__shadow"/> 
                            <rtProgram type="MISS" 		 file="optix/testOptix7.ptx" proc="__miss__shadow"/> 
                        </rayType>
                    </rtMap>
                </rtMaterialMap>
                <rtGlobalParams>
                    <param name="lightDir" type="LIGHT" context="CURRENT" id=0 component="POSITION" />
                    <param name="aTexture" type="TEXTURE" context="Optix Ray Tracer Render Target::pedra" component="ID" />
               </rtGlobalParams>
			</pass>
			<pass class="quad" name="pass2">
				<viewport name="RightViewport" />
				<texture name="offscreenrender" fromLibrary="Optix Ray Tracer Render Target" />
			</pass>
			<pass class="default" name="pass3">
				<scenes>
					<scene name="MainScene" />
				</scenes>
				<camera name="MainCamera" />
				<viewport name="LeftViewport" />
				<lights>
					<light name="Sun" />
				</lights>
			</pass> 
		</pipeline>
	</pipelines>
</project>