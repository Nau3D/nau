                <rtGlobalParams>
                    <param name="lightPos" type="LIGHT" context="CURRENT" id=0 component="POSITION" />
                    <param name="maxDepth" type="PASS" context="CURRENT" component="MAX_DEPTH" />
                    <param name="shadowRays" type="PASS" context="CURRENT" component= "SHADOW_RAYS" />
                    <param name="gamma" type="PASS" context="CURRENT" component= "GAMMA" />
                    <param name="attenuation" type="LIGHT" context="Sun" component= "ATTENUATION" />

                </rtGlobalParams>
			</pass>
			<pass class="quad" name="pass2">
				<viewport name="MainViewport" />
				<texture name="offscreenrender" fromLibrary="Optix Ray Tracer Render Target" />
			</pass>
		</pipeline>
	</pipelines>
    <interface>
        <window label="settings">
            <var label="Squared rays per pixel" type="PASS" context="softShadows#pass1" component="RAYS_PER_PIXEL"
                def="min=1 max=10" />
            <var label="Max depth" type="PASS" context="softShadows#pass1" component="MAX_DEPTH"
                def="min=1 max=10" />
            <var label="Gamma" type="PASS" context="softShadows#pass1" component="GAMMA"
                def="min=0.1 max=3" />
            <var label="Attenuation" type="LIGHT" context="Sun" component="ATTENUATION" />

        </window>
    </interface>
</project>