<?xml version="1.0" ?>
<project name="Optix Test" width=1600 height=400>
	<assets>
		<scenes>
			<scene name="MainScene" >
				<file name="../../models/ntg-bench/bench.obj" />
			</scene>
		</scenes>
		<viewports>
			<viewport name="RightViewport" >
				<ORIGIN x="0.5" y="0" />
				<SIZE width="0.5" height="1.0" />
				<CLEAR_COLOR r="0.5" g="0.0" b="0.0" />
			</viewport>
			<viewport name="LeftViewport" fixed="true">
				<ORIGIN x="0.0" y="0" />
				<SIZE width="0.5" height="1.0" />
				<CLEAR_COLOR r="0.0" g="0.5" b="0.0" />
			</viewport>
		</viewports>
		<cameras>
			<camera name="MainCamera" >
				<viewport name="LeftViewport" />
				<projection TYPE="PERSPECTIVE" FOV=60.0 NEAR=0.3 FAR=1000.0 />
				<POSITION x="-40.593395" y="32.43354" z="-1.299236" />
				<VIEW x="0.901307" y="-0.361665" z="-0.238421" /> 
				<UP x="0.0" y="1.0" z="0.0" />
			</camera>
		</cameras>
		<lights>
			<light name="Sun" >
				<POSITION x="-52" y="77.0" z="-27.0" />
				<DIRECTION x="0.597" y="-0.390" z="0.700" />
				<COLOR r="0.9" g="0.9" b="0.9" />
				<AMBIENT r="0.5" g="0.5" b="0.5" />
			</light>
		</lights>
		<materialLibs>   
			<materialLib filename="optixTest.mlib"/>
		</materialLibs>
	</assets>
	<pipelines>
		<pipeline name="fixedfunction" default="true">
			<pass class="rt" name="pass1">
				<scenes>
					<scene name="MainScene" />
				</scenes>
				<camera name="MainCamera" />
                <!--viewport name="RightViewport" /-->
				<renderTarget name="test" fromLibrary="Optix Ray Tracer Render Target" />
				<lights>
					<light name="Sun" />
				</lights>

				<rtRayTypes>
					<rayType name="Phong"/>
				</rtRayTypes>

				<rtVertexAttributes>
					<attribute name="position"/>
					<attribute name="normal"/>
					<attribute name="texCoord0"/>
				</rtVertexAttributes>

				<rtEntryPoint>
					<rayGen file="optix/testOptix2.ptx" proc="__raygen__renderFrame"/> 
				</rtEntryPoint>
				<rtDefaultMaterial>
					<rayType name="Phong">
						<rtProgram type="ANY_HIT" file="optix/testOptix2.ptx" proc="__anyhit__radiance"/> 
						<rtProgram type="CLOSEST_HIT" file="optix/testOptix2.ptx" proc="__closesthit__radiance"/> 
						<rtProgram type="MISS" 		 file="optix/testOptix2.ptx" proc="__miss__radiance"/> 
					</rayType>
				</rtDefaultMaterial>
			</pass>
			<pass class="quad" name="pass2">
				<viewport name="RightViewport" />
				<texture name="offscreenrender" fromLibrary="Optix Ray Tracer Render Target" />
			</pass>
			<pass class="default" name="pass3">
				<scenes>
					<scene name="MainScene" />
				</scenes>
				<camera name="MainCamera" />
				<viewport name="LeftViewport" />
				<lights>
					<light name="Sun" />
				</lights>
			</pass> 
		</pipeline>
	</pipelines>
</project>