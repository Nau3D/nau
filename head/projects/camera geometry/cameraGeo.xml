				<COLOR r="0.9" g="0.9" b="0.9" />
				<AMBIENT r="0.3" g="0.3" b="0.3" />
			</light>
		</lights>
		
	</assets>
	
	<pipelines>
		<pipeline name="fixedfunction" default="true">
			<pass class="default" name="pass1" >
				<scenes>
					<scene>CubeLand</scene>
					<scene>Perspective</scene>
				</scenes>
				<camera>MainCamera</camera>
				<viewport>LeftViewport</viewport>
				<lights>
					<light>Sun</light>
				</lights>
			</pass>
			<pass class="default" name="pass2" >
				<scenes>
					<scene>CubeLand</scene>
					<scene>Orthographics</scene>
				</scenes>
				<camera>MainCamera</camera>
				<viewport>RightViewport</viewport>
				<lights>
					<light>Sun</light>
				</lights>
			</pass>
			
		</pipeline>
	</pipelines>
</project>